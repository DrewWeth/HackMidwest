<p id="notice"><%= notice %></p>

<h1>Event <%= @event.id %>: <%= @event.name %> 
<% if @has_attended == true %>
  <label class="label label-success">You have attended!</label>
<% end %>
</h1>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @event.desc %>
</p>

<p>
  <strong>Start:</strong>
  <%= @event.start.strftime("%B %d, %Y at %I:%M %p"); %>
</p>

<p>
  <strong>End:</strong>
  <%= @event.end.strftime("%B %d, %Y at %I:%M %p"); %>
</p>

<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<p>
  <strong>Is public:</strong>
  <%= @event.is_public %>
</p>

<p>
  <strong>Group ID:</strong>
  <%= @event.group_id %>
</p>


<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>



<hr>


<h1>All Alerts</h1>
<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Send datetime</th>
      <th>Is sent</th>
      <th>Body</th>
      <th>is_event_start</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @all_alerts.each do |alert| %>
      <tr>
        <td><%= alert.event_id %></td>
        <td><%= alert.send_datetime.strftime("%B %d, %Y at %I:%M %p"); %></td>
        <td><%= alert.is_sent %></td>
        
        <td><%= alert.body %></td>
        <td><%= alert.is_event_start %>
        <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Destroy', alert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to 'Make Alert', new_alert_path %>
