    <%= f.label :desc %><br>
    <%= f.text_field :desc, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :start %><br>
    <%= f.date_field :start, :class => "datepicker form-control" %>
  </div>
  <div class="field">
    <%= f.label :end %><br>
    <%= f.date_field :end, :class => "datepicker form-control" %>
  </div>
  
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :is_public %><br>
    <%= f.check_box :is_public, :class => "form-control" %>
  </div>
  
  <div class="actions">
    <%= f.submit 'Create Event', :class => 'form-control' %>
  </div>
<% end %>
