<!-- Group / show  -->
<p id="notice"><%= notice %></p>
<div class="row">
<div class="col-sm-12">

<h1><%= @group.name %></h1>
<h3><small><%= @group.desc %></small></h3>


<% if current_user != nil %>
  <% if current_user.group_id == params[:id] %>
    <%= link_to("Leave", :controller => "groups", :action => "leave", :id => params[:id]) %> |
  <% else %>
    <%= link_to("Join", :controller => "groups", :action => "join", :id => params[:id])  %> | 
  
  <% end %>

  <%= link_to 'Create Event', new_event_path %> |
<% end %>

<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>

</div>
<div class="col-sm-6"></div>
</div>
<hr>
<div class="row">
<div class="col-sm-12">
<% if !@events.empty? %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Start</th>
      <th>End</th>
      <th>Location</th>
      <th>Is public</th>
      <th>Group ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.desc %></td>
        <td><%= event.start.strftime("%B %d, %Y at %I:%M %p"); %></td>
        <td><%= event.end.strftime("%B %d, %Y at %I:%M %p"); %></td>
        <td><%= event.location %></td>
        <td><%= event.is_public %></td>
        <td><%= event.group_id %></td>
        
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
no upcoming events. make one!
<% end %>
</div>
</div>