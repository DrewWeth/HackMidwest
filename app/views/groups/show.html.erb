<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Desc:</strong>
  <%= @group.desc %>
</p>

<div class="btn btn-warning">
<%= link_to("Join", :controller => "groups", :action => "join", :id => params[:id]) %>
</div>
<%= link_to 'Edit', edit_group_path(@group) %> |
<%= link_to 'Back', groups_path %>

<hr>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Start</th>
      <th>End</th>
      <th>Location</th>
      <th>Is public</th>
      <th>Group ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.desc %></td>
        <td><%= event.start.strftime("%B %d, %Y at %I:%M %p"); %></td>
        <td><%= event.end.strftime("%B %d, %Y at %I:%M %p"); %></td>
        <td><%= event.location %></td>
        <td><%= event.is_public %></td>
        <td><%= event.group_id %></td>
        
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<%= link_to new_event_path, new_event_path %>